{
  "name": "maintenance-tracker-app",
  "version": "1.0.0",
  "description": "An app for managing repair and maintenance requests",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean-dist && npm run clean-ui && npm run build-babel && npm run build-babel-ui-js",
    "start": "npm run build && node build/server/server.js",
    "startDev": "npm run build && nodemon build/server/server.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build-babel": "./node_modules/.bin/babel client/server/ -d build/server",
    "build-babel-ui-js": "./node_modules/.bin/babel client/UI/js -d client/UI/js2",
    "clean-dist": "rm -rf build && mkdir build",
    "clean-ui": "rm -rf client/UI/js2 && mkdir client/UI/js2",
    "test": "NODE_ENV=test nyc mocha test/index.js --exit",
    "setupDb": "npm run build && node build/db",
    "travisSetupDb": "node server/db",
    "testDev": "psql TrackerHero-dev -f server/db/indexTest.sql && npm run test"
  },
  "nyc": {
    "require": [
      "babel-register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuffyKing/Maintenance-Tracker-App.git"
  },
  "keywords": [
    "tracker",
    "repair",
    "maintenance"
  ],
  "author": "Oyindamola Aderinwale",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/LuffyKing/Maintenance-Tracker-App/issues"
  },
  "homepage": "https://github.com/LuffyKing/Maintenance-Tracker-App#readme",
  "dependencies": {
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.2.1",
    "lodash": "^4.17.10",
    "nodemailer": "^4.6.7",
    "pg": "^7.4.3",
    "swagger-ui-express": "^3.0.9",
    "validator": "^10.2.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "coveralls": "^3.0.1",
    "dotenv": "^5.0.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "mocha": "^5.1.1",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.4",
    "nyc": "^11.8.0"
  }
}
